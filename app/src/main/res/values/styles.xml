<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar">
		<!-- Customize your theme here. -->
	</style>

	<style name="Underline">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">0.1dp</item>
		<item name="android:background">@color/line</item>
	</style>

	<style name="CutLine">
		<item name="android:layout_width">0.1dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">@color/line</item>
	</style>

	<style name="Text">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">10dp</item>
	</style>

	<style name="TitleText" parent="Text">
		<item name="android:textSize">16sp</item>
		<item name="android:maxLines">2</item>
	</style>

	<style name="ContentText" parent="Text">
		<item name="android:textSize">14sp</item>
		<item name="android:maxLines">10</item>
		<item name="android:textColor">@color/text</item>
	</style>

	<style name="BlockText">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@color/text</item>
		<item name="android:singleLine">true</item>
		<item name="android:drawablePadding">5dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:gravity">left|center_vertical</item>
	</style>

	<style name="IconImage">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:padding">10dp</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
		<item name="android:background">@drawable/background_selector</item>
	</style>

</resources>
